        return True
    return False
    
def exibirSegundaPeça(peça1,peça2):
    if peça2 == '1':
        mesaDescoberta[0] = mesaEscondida[0]
        exibirMesaDescoberta()
        return True
    elif peça2 == '2':
        mesaDescoberta[1] = mesaEscondida[1]
        exibirMesaDescoberta()
        return True
    elif peça2 == '2':
        mesaDescoberta[1] = mesaEscondida[1]
        exibirMesaDescoberta()
        return True
    elif peça2 == '2':
        mesaDescoberta[1] = mesaEscondida[1]
        exibirMesaDescoberta()
        return True
    elif peça2 == '3':
        mesaDescoberta[2] = mesaEscondida[2]
        exibirMesaDescoberta()
